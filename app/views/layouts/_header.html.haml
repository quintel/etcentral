%header
  %a{href:"http://wattnu.nl", target:"_new", id: "wattnu_#{I18n.locale}"}= t 'landing_page.go_to_wattnu'
  #header_inside
    %ul.sub-nav
      %li.expandable
        %a.information{:href=>"#"}
          = t("header.information")

    %nav#language
      - other_locale = english? ? "nl" : "en"
      = link_to (t 'landing_page.other_language'), "http://energytransitionmodel.com/" + (params[:key] || '') , { class: other_locale }
    %a.root_link{ href: root_path }
      %img(src="/assets/header/logo400@2x.png" width="400" height="49" alt="#{ t(:'meta.name') }")

    = render 'layouts/header_menus'