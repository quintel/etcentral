- if @partner_types.size > 1
  %h1= t("partners.partners_of_the_energy_transition_model")
  %nav#partners_tabs
    %ul
      - @partner_types.each do |partner_type|
        %li{:class => (partner_type == @active_partner_type ? 'active' : '')}
          = link_to t("partners.#{partner_type}"), :partner_type => partner_type
  .clear
- else
  %h1= t("partners.partners_of_the_energy_transition_model")

#partners
  - @partners.each do |p|
    .partner_container
      %a.partner_link{:rel => "partner_#{p.name}", :href => p.url,
        :target => '_blank' }
        .header= image_tag p.logo
  .clear

  - @partners.each do |p|
    .content{:id => "partner_#{p.name}_content"}
      - if p.short_content
        = p.short_content
      - else
        = t("partners.click_here_to_go_to_the_website_of") + "#{p.name_or_long_name}."
  .clear