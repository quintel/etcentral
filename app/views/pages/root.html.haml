%section#main

  %h1= raw t 'landing_page.title'
  %p=  raw t 'landing_page.explanation'

  .row#products

    %article.span4
      .product#etflex
        %a.etflex_link{ href:"#{ product_link(:light) }", target: '_blank' }
          .img-holder
            = image_tag 'pages/root/screen_light.jpg'
          %h2= raw t 'landing_page.etflex.title'
          %p= raw t 'landing_page.etflex.explanation'
          %div.btn-holder
            %a.btn.btn-primary{ href: product_link(:light), target: '_blank' }
              Open
              = raw t 'landing_page.etflex.title'

    %article.span4
      .product#etmodel
        %a.etmodel_link{ href:"#{ product_link(:pro) }", target: '_blank' }
          .img-holder
            = image_tag 'pages/root/screen_pro.jpg'
          %h2= raw t 'landing_page.etmodel.title'
          %p= raw t 'landing_page.etmodel.explanation'
          %div.btn-holder
            %a.btn.btn-primary{ href: product_link(:pro), target: '_blank' }
              Open
              = raw t 'landing_page.etmodel.title'

    %article.span4
      .product#mixer
        %a.mixer_link{href: "#{ product_link(:etmoses) }", target: '_blank'}
          .img-holder
            = image_tag 'pages/root/screen_etmoses.jpg'
          %h2= raw t 'landing_page.etmoses.title'
          %p= raw t 'landing_page.etmoses.explanation'
          %div.btn-holder
            %a.btn.btn-primary{ href: product_link(:etmoses), target: '_blank' }
              Open
              = raw t 'landing_page.etmoses.title'

  .row#education
    %article
      .span2.hidden-phone
        %p
          %i.icon-group
      .span10
        %h2= t('landing_page.education.title')
        %p
          = raw t('landing_page.education.text')
        = link_to t('landing_page.learn_more_dutch_only'), "http://onderwijs.quintel.nl", target: "_blank"
  .clear
