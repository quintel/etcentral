        = render partial: 'partner_logos', locals: { partners: Partner.knowledge }

  .span4
    .partners#education_partners
      #header
        %h2= raw t  'partners.education'
        %a.category_header{href: "http://etcentral.dev/education"}
          %i.icon-info-sign
      .visible-phone
        = render partial: 'partner_logos', locals: { partners: Partner.education }

