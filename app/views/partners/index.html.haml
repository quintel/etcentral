- if @types.size > 1
  %h1= t("partners.partners_of_the_energy_transition_model")
  %nav#partners_tabs
    %ul
      - @types.each do |type|
        %li{:class => (type == @active_partner_type ? 'active' : '')}
          = link_to t("partners.#{type}"), :type => type
  .clear
- else
  %h1= t("partners.partners_of_the_energy_transition_model")

#partners
  - @partners.each do |p|
    .partner_container
      %a.partner_link{:rel => "partner_#{p.key}", :href => p.url,
        :target => '_blank' }
        .header= image_tag "partners/#{p.key.downcase}.png"
  .clear

  - @partners.each do |p|
    .content{:id => "partner_#{p.key}_description"}
      - if p.description
        = p.description
      - else
        = t("partners.click_here_to_go_to_the_website_of") + "#{p.name_or_long_name}."
  .clear